{
    "$schema": "https://raw.githubusercontent.com/nextflow-io/nextflow/master/assets/json-schema/nextflow-schema.json",
    "$id": "https://raw.githubusercontent.com/alkhatib93/octopus_variant_calling/main/nextflow_schema.json",
    "title": "octopus_variant_calling",
    "description": "Small Nextflow pipeline that runs the Octopus variant caller on BAM files.",
    "type": "object",
    "properties": {
      "input": {
        "type": "string",
        "description": "Path to input samplesheet CSV (columns: sample_id,bam).",
        "default": "assets/samplesheet.csv",
        "pattern": ".*\\.csv$"
      },
      "outdir": {
        "type": "string",
        "description": "Directory for all pipeline outputs.",
        "default": "results"
      },
      "reference": {
        "type": "string",
        "description": "Reference genome FASTA used by Octopus (-R).",
        "default": "",
        "minLength": 1
      },
      "octopus_args": {
        "type": "string",
        "description": "Additional arguments passed directly to Octopus.",
        "default": ""
      },
      "help": {
        "type": "boolean",
        "description": "Print usage information and exit.",
        "default": false
      }
    },
    "required": [
      "input",
      "reference"
    ]
  }
  